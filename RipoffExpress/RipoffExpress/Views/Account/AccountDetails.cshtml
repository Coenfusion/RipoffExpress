@model RipoffExpress.Models.AccountModels.AccountDetails

@{
    ViewData["Title"] = "Account details";
}


<div class="jumbotron vertical-center">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <section>
                    <h3>Account Details of @ViewData["SessionMessage"] </h3>
                </section>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <section>
                    <ul>
                        <li><a id="LoadOverview">Overview</a></li>
                        <li><a id="LoadChanges">Change Details</a></li>
                        <li><a id="LoadOrderHistory">Order History</a></li>
                        <li><a id="LoadAddressBook">Shipping Address</a></li>
                    </ul>
                </section>
            </div>
            <div class="col-md-8">
                <div id="LoadPartials"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/LoadPartial.js"></script>
<script>
    document.getElementById("LoadOverview").onclick = function () { myFunction() };
    function myFunction() {

        $("#LoadPartials").load("@Html.Raw(Url.Action("AccountOverview", "Account")) ")
    }
</script>
<script>
    document.getElementById("LoadChanges").onclick = function () { myFunction() };
    function myFunction() {

        $("#LoadPartials").load("@Html.Raw(Url.Action("AccountChanges", "Account")) ")
    }
</script>
