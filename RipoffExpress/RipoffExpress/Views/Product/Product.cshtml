@using RipoffExpress.Models;

@model Product



<div class="jumbotron vertical-center">
    <div class="container text-center">
        <div class="row">
            <div class="ProductPage">
                <div class="col-md-4">
                    <div class="ProductPicture">
                        <img src="~/images/uploads/product/@Model.MediaUrl" alt="picture url" style="max-height:300px; max-width:300px; border:1px solid black;" />
                    </div>
                    <div class="ProductMedia">
                        <!-- Pictureboxes -->
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="ProductDetails">
                        <h3>@Model.Name</h3>
                        <p>
                            @Model.Description
                        </p>
                        <p>
                            &euro; @Model.Price <br />
                            <input type="number" /> <button>Add to cart<!-- Add to cart --></button> <br />
                            <button> Wishlist<!-- Add to wishlist --></button>
                        </p>
                        <!-- price, details, add to cart, add to wishlist and related products-->
                    </div>
                    <div class="RelatedProducts">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>